<?xml version="1.0" encoding="ISO-8859-1"?>
<!DOCTYPE web-app
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
    "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>
  <display-name>Date Servlet</display-name>
  <description>Sample for SER422</description>
  
  <servlet>
    <servlet-name>DateMe</servlet-name>
    <servlet-class>edu.asupoly.ser422.dateservlet.DateServlet</servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>DateMe</servlet-name>
    <url-pattern>/date</url-pattern>
  </servlet-mapping>
 <!-- This is just an example of other things you can do -->
  <mime-mapping>
    <extension>wbmp</extension>
    <mime-type>image/vnd.wap.wbmp</mime-type>
  </mime-mapping>
</web-app>
